{
  "name": "workout-tracker",
  "version": "1.0.0",
  "description": "Personal workout tracking application",
  "main": "src/index.html",
  "type": "module",
  "scripts": {
    "start": "serve -s . -p 5500",
    "build": "tsc --outDir dist",
    "watch": "tsc --watch",
    "test": "jest"
  },
  "dependencies": {
    "serve": "^14.2.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
